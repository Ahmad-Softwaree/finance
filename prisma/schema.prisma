generator client {
  provider = "prisma-client"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Expense {
  id          String   @id @default(cuid())
  amount      Float
  description String
  date        DateTime @default(now())
}
